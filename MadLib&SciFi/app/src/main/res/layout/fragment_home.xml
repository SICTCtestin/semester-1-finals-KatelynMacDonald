<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="301dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#F00"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="193dp"
        android:layout_height="23dp"
        android:layout_marginTop="92dp"
        android:text="By: Katelyn MacDonald"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/directions"
        android:layout_width="335dp"
        android:layout_height="569dp"
        android:layout_marginTop="108dp"
        android:text="This app has 3 different games to switch between games click the lines in the top left corner of the screen. Then click the game you want:\n\nMadlib:     Enter the words or numbers that it is asking for. When you have entered everything click the generate button and it will show you what story you got\n\nSciFi Name:    Enter the words that the game asks you. When you have entered each one click the generate button your new name will appear below\n\nGuess the number:    The computer has picked a number 1-100. Use the slider to choose a number. Once you are on the number you want hit the button to see if you have it right. You have 5 tries. "
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="334dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:text="Sources:  MadlibGenerator,SciFiName,NavDrawerTest,SeekerPractice,Logan "
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>